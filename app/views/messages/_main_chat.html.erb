<div class="chat-header"> 
  <div class="left-header">
    <div class="header-title">
      <%= @room.name %>
    </div>
  </div>
  <div class="right-header">
    <div class="header-button">
      <% if current_user.id == @room.user_id %>
        <%= link_to "Edit chat name", edit_room_path(@room.id) %>
      <% end %>

      <% if current_user.id == @room.user_id %>
        <%= link_to "Close the room", room_path(@room), method: :delete %>
      <% end %>
    </div>
  </div>
</div>

<div class="messages">
  <%= render partial: 'message', collection: @messages %>
</div>

<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">Image</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit 'Send', class: 'form-submit', id: "submit" %>
  <div id="list">
  </div>
<% end %>